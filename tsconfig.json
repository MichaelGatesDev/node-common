{
  "compilerOptions": {

    "outDir": "lib",
    "rootDir": "./",
    "module": "commonjs",
    "composite": true,
    "target": "es6",

    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "__tests__/**/*",
    "__mocks__/**/*"
  ]
}